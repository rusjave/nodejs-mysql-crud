html
	head
		title Account List
	body
		h3 Account List
		a(href="/account/add") Add
		table(border='1')
			tr
				th	Id
				th 	Username
				th 	Full Name
				th	Action
			each account in accounts
				tr
					td	#{account.id}
					td	#{account.username}
					td	#{account.full_name}	
					td 
						a( href="/account/edit/" + account.id)	Edit
						
						a( href="/account/delete/" + account.id, onclick="return confirm('Are you sure?')")	Delete	